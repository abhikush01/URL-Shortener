<header class="bg-indigo-600 text-white">
  <div class="container mx-auto p-4 flex justify-between items-center">
    <a href="/" class="text-2xl font-bold">URL Shortener</a>
    <nav>
      <% if (!cookies.token) { %>
      <a
        href="/signup"
        class="px-4 py-2 rounded-md bg-indigo-500 hover:bg-indigo-400"
        >Sign Up</a
      >
      <a
        href="/login"
        class="ml-4 px-4 py-2 rounded-md bg-white text-indigo-600 hover:bg-indigo-100"
        >Login</a
      >
      <% } else { %>

      <a href="/" class="ml-4 px-4 py-2 rounded-md bg-red-500 hover:bg-red-400"
        >Logout</a
      >
      <% } %>
    </nav>
  </div>
</header>
